.page-header
  %p{style: "color: green"}= notice

  %h1.mb-4.m-4
    = t('application.list_of', model: t('activerecord.modules.comedian.other'))
    .float-right
      = link_to t('application.new'), new_comedian_path, class: "btn btn-primary"

%table.table.table-striped
  %thead
    %tr
      %th= t('activerecord.attributes.comedian.first_name')
      %th= t('activerecord.attributes.comedian.last_name')
      %th= t('activerecord.attributes.comedian.id_number')
      %th= t('application.level')
      %th
      %th
      %th
  %tbody
    - @comedians.each do |comedian|
      %tr
        %td= comedian.first_name
        %td= comedian.last_name
        %td= comedian.id_number
        %td= comedian.level
        %td= link_to  t('application.show'), comedian, class: "btn btn-info"
        %td= link_to t('application.edit'), edit_comedian_path(comedian), class: "btn btn-success"
        %td= link_to t('aplication.delete'), comedian , method: :delete , class: "btn btn-danger",
          data: {confirm: t('application.do_you_want_to_delete', model: t('activerecord.modules.comedian.one')),
          accept: t('aplication.accept'),
          reject: t('aplication.cancel')}
