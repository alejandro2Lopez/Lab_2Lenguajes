= form_for @contract, validate: true do |f|
  .form-group.ml-4.mr-4
    =f.label t('activerecord.attributes.contract.locate'), class: "form-label required"
    =f.text_field :locate, autofocus: true, class: "form-control"


    .offset-3.col-3
      = link_to  t('application.back'), contracts_path, class: "btn btn-secondary btn-block"
    .col-3
      = button_tag  t('application.save'), class: "btn btn-success btn-block",
        'data-disable-with': t('application.saving')
